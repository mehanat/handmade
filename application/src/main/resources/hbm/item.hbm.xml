<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.handmade_shop.domain.item.Item" table="item">
        <meta attribute="class-description">
            Маппинг товаров
        </meta>

        <id name="id" column="ID" access="field">
            <generator class="native"/>
        </id>
        <property name="name" column="NAME" access="field"/>
        <property name="cost" column="COST" access="field"/>
        <property name="description" column="DESCRIPTION" access="field"/>
        <property name="imageUrl" column="IMAGE_URL" access="field"/>
    </class>
</hibernate-mapping>