<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.handmade_shop.application.security.Session" table="item">
        <meta attribute="class-description">
            Маппинг сессии
        </meta>

        <id name="id" column="ID" access="field">
            <generator class="assigned"/>
        </id>
        <many-to-one name="user" access="field" column="USER_UD" not-null="true" class="com.handmade_shop.domain.user.User" cascade="save-update"/>
        <property name="expiration" column="EXPIRATION" access="field"/>
    </class>
</hibernate-mapping>